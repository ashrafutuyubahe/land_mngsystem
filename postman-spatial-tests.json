{
  "info": {
    "name": "Land Administration API - Spatial Testing",
    "description": "Complete Postman collection for testing PostGIS spatial functionality",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "jwt_token",
      "value": "your_jwt_token_here"
    },
    {
      "key": "land_record_id",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.access_token);",
                  "    console.log('JWT Token set:', response.access_token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Land Registration with Spatial Data",
      "item": [
        {
          "name": "Create Land Record - Kigali Downtown",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"parcelNumber\": \"KGL-001-2024-001\",\n  \"upiNumber\": \"UPI-KGL-001-2024-001\",\n  \"area\": 1500.75,\n  \"district\": \"Kigali\",\n  \"sector\": \"Nyarugenge\",\n  \"cell\": \"Kiyovu\",\n  \"village\": \"Kiyovu I\",\n  \"description\": \"Commercial plot in Kigali downtown with PostGIS geometry\",\n  \"landUseType\": \"COMMERCIAL\",\n  \"marketValue\": 75000000,\n  \"governmentValue\": 70000000,\n  \"geometry\": {\n    \"type\": \"Polygon\",\n    \"coordinates\": [\n      [\n        [30.0564, -1.9441],\n        [30.0574, -1.9441],\n        [30.0574, -1.9451],\n        [30.0564, -1.9451],\n        [30.0564, -1.9441]\n      ]\n    ]\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/land-registration",
              "host": ["{{base_url}}"],
              "path": ["land-registration"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('land_record_id', response.id);",
                  "    console.log('Land Record ID set:', response.id);",
                  "    console.log('Calculated Area:', response.calculatedArea);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Create Land Record - Gasabo Residential",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"parcelNumber\": \"GSB-002-2024-001\",\n  \"upiNumber\": \"UPI-GSB-002-2024-001\",\n  \"area\": 800.0,\n  \"district\": \"Gasabo\",\n  \"sector\": \"Remera\",\n  \"cell\": \"Rukiri I\",\n  \"village\": \"Rukiri\",\n  \"description\": \"Residential plot in Gasabo district\",\n  \"landUseType\": \"RESIDENTIAL\",\n  \"marketValue\": 40000000,\n  \"governmentValue\": 38000000,\n  \"geometry\": {\n    \"type\": \"Polygon\",\n    \"coordinates\": [\n      [\n        [30.1234, -1.9123],\n        [30.1244, -1.9123],\n        [30.1244, -1.9133],\n        [30.1234, -1.9133],\n        [30.1234, -1.9123]\n      ]\n    ]\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/land-registration",
              "host": ["{{base_url}}"],
              "path": ["land-registration"]
            }
          }
        },
        {
          "name": "Create Land Record - Agricultural Land",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"parcelNumber\": \"AGR-003-2024-001\",\n  \"upiNumber\": \"UPI-AGR-003-2024-001\",\n  \"area\": 5000.0,\n  \"district\": \"Musanze\",\n  \"sector\": \"Muhoza\",\n  \"cell\": \"Cyuve\",\n  \"village\": \"Cyuve I\",\n  \"description\": \"Large agricultural plot near Musanze\",\n  \"landUseType\": \"AGRICULTURAL\",\n  \"marketValue\": 25000000,\n  \"governmentValue\": 22000000,\n  \"geometry\": {\n    \"type\": \"Polygon\",\n    \"coordinates\": [\n      [\n        [29.6234, -1.4987],\n        [29.6334, -1.4987],\n        [29.6334, -1.5087],\n        [29.6234, -1.5087],\n        [29.6234, -1.4987]\n      ]\n    ]\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/land-registration",
              "host": ["{{base_url}}"],
              "path": ["land-registration"]
            }
          }
        }
      ]
    },
    {
      "name": "Spatial Queries",
      "item": [
        {
          "name": "Get Land Record with Geometry",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/land-registration/{{land_record_id}}/geometry",
              "host": ["{{base_url}}"],
              "path": ["land-registration", "{{land_record_id}}", "geometry"]
            }
          }
        },
        {
          "name": "Calculate Actual Area using PostGIS",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/land-registration/{{land_record_id}}/area",
              "host": ["{{base_url}}"],
              "path": ["land-registration", "{{land_record_id}}", "area"]
            }
          }
        },
        {
          "name": "Find Nearby Land Records - Kigali Center",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/land-registration/spatial/nearby?lat=-1.9441&lng=30.0569&radius=1000",
              "host": ["{{base_url}}"],
              "path": ["land-registration", "spatial", "nearby"],
              "query": [
                {
                  "key": "lat",
                  "value": "-1.9441",
                  "description": "Latitude of center point"
                },
                {
                  "key": "lng",
                  "value": "30.0569",
                  "description": "Longitude of center point"
                },
                {
                  "key": "radius",
                  "value": "1000",
                  "description": "Search radius in meters"
                }
              ]
            }
          }
        },
        {
          "name": "Find Nearby Land Records - Wider Search",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/land-registration/spatial/nearby?lat=-1.9441&lng=30.0569&radius=5000",
              "host": ["{{base_url}}"],
              "path": ["land-registration", "spatial", "nearby"],
              "query": [
                {
                  "key": "lat",
                  "value": "-1.9441"
                },
                {
                  "key": "lng",
                  "value": "30.0569"
                },
                {
                  "key": "radius",
                  "value": "5000"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Overlap Detection",
      "item": [
        {
          "name": "Check Geometry Overlap",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/land-registration/land_record_id_1/overlap/land_record_id_2",
              "host": ["{{base_url}}"],
              "path": [
                "land-registration",
                "land_record_id_1",
                "overlap",
                "land_record_id_2"
              ]
            },
            "description": "Replace land_record_id_1 and land_record_id_2 with actual IDs"
          }
        }
      ]
    },
    {
      "name": "Standard CRUD Operations",
      "item": [
        {
          "name": "Get All Land Records",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/land-registration",
              "host": ["{{base_url}}"],
              "path": ["land-registration"]
            }
          }
        },
        {
          "name": "Get Single Land Record",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/land-registration/{{land_record_id}}",
              "host": ["{{base_url}}"],
              "path": ["land-registration", "{{land_record_id}}"]
            }
          }
        }
      ]
    }
  ]
}
